<Page x:Class="ExamMain.Pages.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamMain.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin" Loaded="UpLoad">

    <StackPanel Background="Aqua">
        <ToolBar HorizontalAlignment="Center">
            <Button Click="Add_Click" Content="Add" FontSize="14" Width="80" Foreground="Gold"/>
            <Button Click="Delete_Click" Content="Delete" Width="80" FontSize="14" Foreground="DarkGoldenrod"/>
            <Button Click="Edit_Click" Content="Edit" Width="80" FontSize="14" Foreground="MediumPurple"/>
        </ToolBar>
        <DataGrid MinHeight="100" x:Name="dgv"/>
        <ToolBar HorizontalAlignment="Center">
            <Button Click="AddSmall_Click" Content="Add" FontSize="14" Width="80" Foreground="MediumPurple"/>
            <Button Click="DeleteSmall_Click" Content="Delete" Width="80" FontSize="14" Foreground="DarkGoldenrod"/>
            <Button Click="EditSmall_Click" Content="Edit" Width="80" FontSize="14" Foreground="Gold"/>
        </ToolBar>
        <DataGrid MinHeight="100" x:Name="dgv2"/>
    </StackPanel>
</Page>
